
{
   "controller": {
   },
   "workers": [
      {
         "type": "router",
         "realms": [
            {
               "name": "frontend",
               "roles": [
                  {
                     "name": "user",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": false
                        }
                     ]
                  },
                  {
                     "name": "server",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        }
                     ]
                  },
                  {
                     "name": "authenticator",
                     "permissions": [
                        {
                           "uri": "authenticate",
                           "register": true
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "websocket",
               "endpoint": {
                  "type": "tcp",
                  "port": 8080,
                  "interface": "127.0.0.1"
               },
               "auth": {
                  "wampcra": {
                     "type": "dynamic",
                     "authenticator": "authenticate"
                  }
               }
            },
            {
               "type": "websocket",
               "endpoint": {
                  "type": "tcp",
                  "port": 9000,
                  "interface": "127.0.0.1"
               },
               "auth": {
                  "wampcra": {
                     "type": "static",
                     "users": {
                        "server": {
                           "secret": "password",
                           "role": "server"
                        },
                        "authenticator": {
                           "secret": "password",
                           "role": "authenticator"
                        }
                     }
                  }
               }
            }
         ]
      }
   ]
}
